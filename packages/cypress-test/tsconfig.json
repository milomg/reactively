{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["cypress"],
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "@reactively/core": ["../core/src/core"],
      "@reactively/decorate": ["../decorate/src/decorate"],
      "@reactively/lit": ["../lit/src/lit"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
