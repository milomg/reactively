{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "types": ["@types/node"],
    "noEmit": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@reactively/core": ["../core/src/core"],
      "@reactively/decorate": ["../decorate/src/decorate"],
      "@reactively/debug": ["../debug/src/debug"]
    }
  }
}
